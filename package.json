{
  "name": "web-logger",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "size": "pnpm --filter @cp949/web-logger run size && pnpm --filter @cp949/web-logger-react run size",
    "size:core": "pnpm --filter @cp949/web-logger run size",
    "size:react": "pnpm --filter @cp949/web-logger-react run size",
    "size:why": "size-limit --why",
    "size:ci": "size-limit --json",
    "demo": "pnpm ts-node packages/web-logger/scripts/demo.ts"
  },
  "devDependencies": {
    "@size-limit/file": "^12.0.0",
    "@size-limit/preset-small-lib": "^12.0.0",
    "prettier": "^3.7.3",
    "rollup-plugin-visualizer": "^6.0.5",
    "size-limit": "^12.0.0",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
